{
  "name": "speicher210/business-hours",
  "description": "DateTime and business hours (opening, closing times) calculations",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "business",
    "opening",
    "closing",
    "hours"
  ],
  "authors": [
    {
      "name": "Dragos Protung",
      "email": "dragos@protung.de",
      "role": "Developer"
    },
    {
      "name": "Cezary StÄ™pkowski",
      "email": "cezary.stepkowski@speicher210.com",
      "role": "Developer"
    }
  ],
  "homepage": "https://github.com/protung/business-hours",
  "require": {
    "php": "~8.3.0 || ~8.4.0 || ~8.5.0",
    "ext-json": "*",
    "azjezz/psl": "^3.3.0 || ^4.0.0",
    "webmozart/assert": "^1.12.1 || ^2.0.0"
  },
  "require-dev": {
    "doctrine/coding-standard": "^14.0.0",
    "ekino/phpstan-banned-code": "^3.0.0",
    "ergebnis/composer-normalize": "^2.49.0",
    "phpstan/phpstan": "^2.1.38",
    "phpstan/phpstan-deprecation-rules": "^2.0.3",
    "phpstan/phpstan-phpunit": "^2.0.12",
    "phpstan/phpstan-strict-rules": "^2.0.8",
    "phpstan/phpstan-webmozart-assert": "^2.0.0",
    "phpunit/phpunit": "^12.5.8"
  },
  "autoload": {
    "psr-4": {
      "Speicher210\\BusinessHours\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Speicher210\\BusinessHours\\Test\\": "tests"
    }
  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ergebnis/composer-normalize": true
    },
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "3.0-dev"
    }
  },
  "scripts": {
    "analyse": [
      "@analyse-phpstan"
    ],
    "analyse-phpstan": [
      "phpstan analyse --memory-limit=512M"
    ],
    "analyse-phpstan-update": [
      "phpstan analyse --generate-baseline"
    ],
    "check": [
      "composer validate",
      "composer normalize --dry-run",
      "@cs-check",
      "@analyse",
      "@test"
    ],
    "cs-check": "phpcs -p",
    "cs-fix": "phpcbf -p",
    "test": "phpunit --testdox"
  }
}
